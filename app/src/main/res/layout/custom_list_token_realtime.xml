<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp">

    <!-- Icon -->
    <ImageView
        android:id="@+id/iconToken"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/coin"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <!-- Tên + Market Cap -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iconToken"
        android:layout_marginStart="@dimen/_8sdp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/nameToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/marketCapitalizationToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$521,49B"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/gray"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/priceLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/priceToken"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="$111,314.05"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"/>

        <!-- % thay đổi -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPercent24H"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="8dp"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            app:cardBackgroundColor="@color/green">

            <TextView
                android:id="@+id/percentRealtime"
                android:text="+1.64%"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:gravity="center"
                android:textSize="12sp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>
