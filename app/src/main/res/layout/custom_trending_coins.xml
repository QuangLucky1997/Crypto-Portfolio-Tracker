<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewToken"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp">

    <RelativeLayout
        android:id="@+id/groupStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iconTokenTrending"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/coin" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_toEndOf="@id/iconTokenTrending"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tokenTrending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="BTC"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_margin="@dimen/_2sdp"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/inter_bold"
                            android:id="@+id/textMarketRank"
                            android:text="290"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:fontFamily="@font/inter_bold"
                    android:id="@+id/textSymbolToken"
                    android:text="ajskajska"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPercent24H"
        app:layout_constraintStart_toEndOf="@+id/groupStart"
        app:layout_constraintEnd_toStartOf="@+id/priceToken"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_12sdp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="@dimen/_8sdp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_margin="@dimen/_2sdp"
                android:id="@+id/imgUpDown"
                android:layout_gravity="center_vertical"
                android:src="@drawable/up_trend"
                android:padding="@dimen/_2sdp"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"/>
            <TextView
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_gravity="center_vertical"
                android:id="@+id/percentRealtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="+1.64%"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/priceToken"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/inter_bold"
        android:singleLine="true"
        android:text="$111,314.05"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp" />









        <!-- % thay đổi -->



    <View
        app:layout_constraintTop_toBottomOf="@+id/groupStart"
        android:background="@color/gray"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
