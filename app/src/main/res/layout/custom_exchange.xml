<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewTokenTrending"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewTop"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/groupStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconExchange"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/coin" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_toEndOf="@id/iconExchange"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameExchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="BTC"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/_12ssp" />
                <TextView
                    android:fontFamily="@font/inter_bold"
                    android:id="@+id/textSymbolToken"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_alpha"
                    android:textSize="@dimen/_10ssp" />


            </LinearLayout>
        </RelativeLayout>

        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_gravity="center_vertical"
            android:id="@+id/textVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="+1.64%"
            android:textColor="@color/white_alpha"
            android:textSize="12sp" />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/priceToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/inter_bold"
        android:singleLine="true"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="$111,314.05"
        android:textColor="@color/white_alpha"
        android:textSize="@dimen/_12ssp" />






    <View
        android:layout_below="@+id/viewTop"
        android:background="@color/gray"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>

</RelativeLayout>
