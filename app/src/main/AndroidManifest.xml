<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".inject.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CryptoPortfolioTracker">
        <activity
            android:name=".ui.tutorials.TutorialActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CryptoPortfolioTracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="true"/>

        <activity
            android:name=".ui.market.detailInfoByID.DetailTokenActivity"
            android:exported="true"/>

        <activity
            android:name=".ui.news.ShowNewsActivity"
            android:exported="true"/>

        <activity
            android:name=".ui.portfolio.AddTransactionActivity"
            android:exported="true"/>

        <activity
            android:name=".ui.portfolio.DetailAddTransactionActivity"
            android:exported="true"/>

        <activity
            android:name=".ui.market.coin.detailCoin.ChartTokenActivity"
            android:exported="true"/>
    </application>

</manifest>